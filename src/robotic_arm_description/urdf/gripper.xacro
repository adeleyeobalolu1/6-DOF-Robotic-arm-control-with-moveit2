<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="gripper_base_link">
        <visual>
            <origin xyz="0 0 0.01" rpy="0 0 0" />
            <geometry>
                <box size="0.2 0.06 0.02" />
            </geometry>
            <material name="dark_green"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.01" rpy="0 0 0" />
            <geometry>
                <box size="0.2 0.06 0.02" />
            </geometry>
        </collision>
    </link>

    <link name="gripper_left_finger_link">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <geometry>
                <box size="0.02 0.06 0.08" />
            </geometry>
            <material name="light_green"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <geometry>
                <box size="0.02 0.06 0.08" />
            </geometry>
        </collision>
    </link>

    <link name="gripper_right_finger_link">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <geometry>
                <box size="0.02 0.06 0.08" />
            </geometry>
            <material name="light_green"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <geometry>
                <box size="0.02 0.06 0.08" />
            </geometry>
        </collision>
    </link>

    <joint name="gripper_base_left_joint" type="prismatic">
        <parent link="gripper_base_link" />
        <child link="gripper_left_finger_link" />
        <origin xyz="-0.09 0 0.01" rpy="0 0 0" />
        <axis xyz="1 0 0" />
        <limit lower="0.0" upper="0.08" effort="1000.0" velocity="1.0" />
    </joint>

    <joint name="gripper_base_right_joint" type="prismatic">
        <parent link="gripper_base_link" />
        <child link="gripper_right_finger_link" />
        <origin xyz="0.09 0 0.01" rpy="0 0 ${pi}" />
        <axis xyz="1 0 0" />
        <mimic joint = "gripper_base_left_joint" multiplier= "1.0" />
        <limit lower="0.0" upper="0.08" effort="1000.0" velocity="1.0" />
    </joint>

</robot>